\newcounter{SkillBonus}
\newcommandx{\CalculateSkillBonus}[1]{
	\pgfkeys{#1}
    \setcounter{SkillBonus}{0}

	\CalculateProficiency{proficiency = \proficiency, proficiency/hide=true}
	\addtocounter{SkillBonus}{\value{Prof}}

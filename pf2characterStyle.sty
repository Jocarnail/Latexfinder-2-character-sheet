% HEADERS FORMATS
\RequirePackage[
    compact,
    % nobottomtext,
    rubberchapters
    ]{titlesec}

    \titleformat{\section}
        {\bfseries \Large \scshape}
        {\thesection}
        {0.5em}
        {\textcolor{MidnightBlue}}
        [{\titlerule}]
        
    \titleformat{\chapter}
        {\bfseries \Huge \scshape}
        {\thechapter\ â€”}
        {0.25em}
        {\textcolor{MidnightBlue}}
        []
        
    \titleformat{\part}[display]
        {\bfseries \Huge \scshape \filright}
        {\partname\ \thepart}
        {0em}
        {\color{MidnightBlue} \fontsize{50}{1}\selectfont}
        
    \titlespacing{\part}
        {4em}{.3\textheight}{*1}
        
    \titleformat{\subsection}
        {\bfseries \large}
        {\thesubsection}
        {0pt}
        {\textcolor{MidnightBlue}}
        
    \titlespacing{\subsection}
        {0pt}{1ex}{0pt}

    \titleformat{\subsubsection}
        {\bfseries}
        {}
        {0pt}
        {\textcolor{MidnightBlue}}
        [{\titlerule}]
        
    \titleclass{\subchapter}[0]{straight}
    \newcounter{subchapter}
    \renewcommand{\thesubchapter}{\Alph{subchapter}}
    \titleformat{\subchapter}[hang]
        {\Huge \scshape}
        {\thesubchapter}
        {0em}
        {\textcolor{MidnightBlue}}
        []
    \titlespacing{\subchapter}
        {0em}{0em}{*1}

    \titlespacing{\paragraph}{0pt}{*0.6}{*2}


% TITLE FORMAT
\RequirePackage{titling}

    % Title
    \pretitle{\vspace{-30pt} \begin{flushleft} \Huge \scshape \underline}
    \posttitle{ {} \end{flushleft} }

    % Author
    \preauthor{\begin{flushleft} \bfseries \textcolor{BrickRed}}
    \postauthor{\par \end{flushleft}}


